        <properties>
			<!-- Postgres -->
            <property name="hibernate.connection.username" value="datastorelinker"/>
            <property name="hibernate.connection.password" value="5Ugep3qa"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/solparc_datastorelinker"/>      
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
